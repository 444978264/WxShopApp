var host = "http://www.lastmall.com"

function imgUrl(url) {
    var reg = getRegExp("^(https|http|ftp|rtsp|mms)")
    if (reg.test(url)) {
        return url
    } else if (url[0] == '/') {
        return host + url
    } else {
        return host + '/' + url
    }
}
function linkTo(url) {
    var path = '';
    var reg = getRegExp("[&|\?]((?!controller|action).)*=([^&?]*)", 'm');  
    path = url.match(reg).join('');
    if (path[0] == "&") {
        path[0] = "?"
    }
    return path
}

function parse(data){
    return typeof data == "string" ?JSON.parse(data):data
}
function parseNum(data){
